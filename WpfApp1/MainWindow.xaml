<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    
    <WrapPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
        
        <StackPanel Orientation="Vertical">
            <Button
                Content="Exit" 
                Click="OnExit"
                Width="50"
                HorizontalAlignment="Right"/>
            
            <StackPanel Orientation="Horizontal">

                <Label 
                        HorizontalAlignment="Center" 
                        FontSize="16"
                        Foreground="Black"
                        FontWeight="Bold"
                        Content="Principle Amount($) "
                        Margin="10"/>
                <TextBox
                        Text="{Binding Principle, UpdateSourceTrigger=PropertyChanged}"
                        HorizontalAlignment="Right" 
                        FontSize="16"
                        Foreground="Blue"
                        BorderBrush="Black"
                        MinWidth="200"
                        Margin="10"
                        VerticalAlignment="Center"
                        TextAlignment="Left"
                        
                        />

            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <Label 
                        HorizontalAlignment="Center" 
                        FontSize="16"
                        Foreground="Black"
                        FontWeight="Bold"
                        Content="Interest Rate(%)        "
                        Margin="10"/>
                <TextBox 
                        Text="{Binding Interest, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="16"
                        Foreground="Blue"
                        BorderBrush="Black"
                        MinWidth="200"
                        Margin="10"
                        VerticalAlignment="Center"
                        TextAlignment="Left"
        
                        />

            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <Label 
                        HorizontalAlignment="Center" 
                        FontSize="16"
                        Foreground="Black"
                        FontWeight="Bold"
                        Content="No. of Year                "
                        Margin="10"/>
                <TextBox
                        Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"
                        HorizontalAlignment="Center" 
                        FontSize="16"
                        Foreground="Blue"
                        BorderBrush="Black"
                        MinWidth="200"
                        Margin="10"
                        VerticalAlignment="Center"
                        TextAlignment="Left"
        
                        />

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                
                <StackPanel Orientation="Vertical">
                    <Label 
                        
                        HorizontalAlignment="Center" 
                        FontSize="16"
                        Foreground="Black"
                        FontWeight="Bold"
                        Content="Interest Amouont"
                        Background="PowderBlue"
                        Margin="10 30 10 0 "/>

                    <Label
                        Content="{Binding InterestAmount}"
                        HorizontalAlignment="Center" 
                        FontSize="18"
                        Foreground="Blue"
                        FontWeight="Bold"
                        />

                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <Label 
                        HorizontalAlignment="Center" 
                        FontSize="16"
                        Foreground="Black"
                        FontWeight="Bold"
                        Content="Total Amouont"
                        Background="PowderBlue"
                        Margin="10 30 10 0 "/>

                    <Label
                        Content="{Binding TotalAmount}"
                        HorizontalAlignment="Center" 
                        FontSize="18"
                        Foreground="Blue"
                        FontWeight="Bold"
                        />

                </StackPanel>
            </StackPanel>


            <WrapPanel 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="0 30 0 10"
                >
                <StackPanel Orientation="Horizontal">
                    <Button
                        Command="{Binding ClearCommand}"
                        Content="Clear"
                        FontSize="20"
                        FontWeight="DemiBold"
                        Foreground="White"
                        Background="OrangeRed"
                        Padding="10 4 10 4"
                        Margin="0 0 10 0"
                        />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button
                         Command="{Binding CalcCommand}"
                         Content="Calculate"
                         FontSize="20"
                         FontWeight="DemiBold"
                         Foreground="White"
                         Background="Blue"
                         Padding="10 4 10 4"
                         Margin="10 0 0 0"
                         />
                </StackPanel>
            </WrapPanel>

        </StackPanel>



    </WrapPanel>

</Window>
