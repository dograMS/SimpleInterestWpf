<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:userControls="clr-namespace:WpfApp1.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">

    
    <WrapPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >

        <Border Background="White"
        CornerRadius="10"
        Padding="20"
        Margin="20"
        BorderBrush="#DDD"
        BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                          BlurRadius="10"
                          ShadowDepth="4"
                          Opacity="0.15"/>
            </Border.Effect>

            <StackPanel Orientation="Vertical">
            <Button
                Content="Exit" 
                Click="OnExit"
                Width="50"
                Height="30"
                FontSize="16"
                HorizontalAlignment="Right"/>


            <StackPanel Orientation="Vertical">

    

                <userControls:ModernTextBox 
                    LabelData="Principle Amount"
                    TextData="{Binding Principle, UpdateSourceTrigger=PropertyChanged}"
                    Width="400"
                    Margin="10"/>


                <userControls:ModernTextBox
                        LabelData="Interest Rate(%)"
                        Margin="10"
                        TextData="{Binding Interest, UpdateSourceTrigger=PropertyChanged}"
                        Width="400"
                       />
                <userControls:ModernTextBox
                        LabelData="Term in Years"
                        Margin="10"
                        TextData="{Binding Year, UpdateSourceTrigger=PropertyChanged}"
                        Width="400"
                       />

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                
                <StackPanel Orientation="Vertical">
                    <Label 
                        
                        HorizontalAlignment="Center" 
                        FontSize="16"
                        Foreground="Black"
                        FontWeight="Bold"
                        Content="Interest Amouont"
                        Background="PowderBlue"
                        Margin="10 30 10 0 "/>

                    <Label
                        Content="{Binding InterestAmount}"
                        HorizontalAlignment="Center" 
                        FontSize="18"
                        Foreground="Blue"
                        FontWeight="Bold"
                        />

                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <Label 
                        HorizontalAlignment="Center" 
                        FontSize="16"
                        Foreground="Black"
                        FontWeight="Bold"
                        Content="Total Amouont"
                        Background="PowderBlue"
                        Margin="10 30 10 0 "/>

                    <Label
                        Content="{Binding TotalAmount}"
                        HorizontalAlignment="Center" 
                        FontSize="18"
                        Foreground="Blue"
                        FontWeight="Bold"
                        />

                </StackPanel>
            </StackPanel>


            <WrapPanel 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="0 30 0 10"
                >
                <StackPanel Orientation="Horizontal">
                    <Button
                        Style="{StaticResource ClearButtonStyle}"
                        Command="{Binding ClearCommand}"
                        Content="Clear"
                        />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button
                        Style="{StaticResource CalculateButtonStyle}"
                         Command="{Binding CalcCommand}"
                         Content="Calculate"
                         />
                </StackPanel>
            </WrapPanel>

        </StackPanel>

         </Border>

    </WrapPanel>

</Window>
