<UserControl x:Class="WpfApp1.View.UserControls.ModernTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="250">

    <StackPanel
        x:Name="StackContainer"
        VerticalAlignment="Center"
        Background="White">


        <TextBlock
            x:Name="labelControl"
            Text="{Binding LabelData, RelativeSource={RelativeSource AncestorType=UserControl}}"
            HorizontalAlignment="Left"
            FontSize="16"
            Padding="10, 2, 10, 5"
            Foreground="DarkGray"
            Background="Transparent"
            />
        <TextBox
            x:Name="textboxControl"
            Text="{Binding TextData, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            TextAlignment="Left"
            FontSize="16"
            Padding="10, 0, 0,0"
            Background="Transparent"
            BorderThickness="0" TextChanged="TextBox_TextChanged"
            
            />
        <Border 
                x:Name="bottomBorder"
                Margin="2"
                Padding="10, 0, 0,0"
                BorderThickness=".5"
                BorderBrush="Black"
                />
    </StackPanel>
</UserControl>
